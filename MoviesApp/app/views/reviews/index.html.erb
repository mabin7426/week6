<h1>Reviews</h1>

<p><%= link_to 'Add a New Review', new_review_url %></p>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Summary</th>
      <th>Rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <% m = Movie.find_by_id(review.movie_id) %>

      <td>
        <% if m.present? %>
          <%= m.title %>
        <% end %>
      </td>
      <td><%= review.summary %></td>
      <td><%= review.rating %></td>

      <td><%= link_to 'Show', review_url(review) %></td>
      <td><%= link_to 'Edit', edit_review_url(review) %></td>
      <td><%= link_to 'Destroy', review_url(review), method: 'delete', data: { confirm: "Do you really want to delete this review?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

